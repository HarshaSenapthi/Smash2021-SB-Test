<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>account_created_notification</fullName>
        <description>account created notification</description>
        <protected>false</protected>
        <recipients>
            <recipient>harsha@sf.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/cus_notifictaion</template>
    </alerts>
    <alerts>
        <fullName>account_s_annual_revenue_is_greater_than_1_million</fullName>
        <ccEmails>harsha@cube84.com</ccEmails>
        <description>account’s annual revenue is greater than $1 million.</description>
        <protected>true</protected>
        <recipients>
            <type>accountOwner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Annual_Revenue_Changes_Informing_To_Account_Owner</template>
    </alerts>
    <fieldUpdates>
        <fullName>Update_RecordType</fullName>
        <field>RecordTypeId</field>
        <lookupValue>Standard</lookupValue>
        <lookupValueType>RecordType</lookupValueType>
        <name>Update RecordType</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>acc_industry</fullName>
        <field>Industry</field>
        <literalValue>Banking</literalValue>
        <name>acc industry</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Account Update</fullName>
        <actions>
            <name>Update_RecordType</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Account.Back_Check__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Notify Account Owner when annual revenue is greater than %241 million%2E</fullName>
        <actions>
            <name>account_s_annual_revenue_is_greater_than_1_million</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Notify the account owner when someone else updates the account if the account’s annual revenue is greater than $1 million.</description>
        <formula>AND( (LastModifiedById &lt;&gt; OwnerId), (AnnualRevenue &gt; 1000000) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>account_creation</fullName>
        <actions>
            <name>account_created_notification</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Account.Name</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>activerule</fullName>
        <actions>
            <name>bigaccounts</name>
            <type>Task</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>Account.Active__c</field>
            <operation>equals</operation>
            <value>Yes</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.AnnualRevenue</field>
            <operation>greaterThan</operation>
            <value>50000</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>cityrule</fullName>
        <actions>
            <name>bigaccounts</name>
            <type>Task</type>
        </actions>
        <actions>
            <name>city_is_hyd</name>
            <type>Task</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Account.BillingCity</field>
            <operation>equals</operation>
            <value>hyderabad</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>industryfieldudpate</fullName>
        <actions>
            <name>acc_industry</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>Account.AnnualRevenue</field>
            <operation>greaterThan</operation>
            <value>50000</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.BillingCity</field>
            <operation>equals</operation>
            <value>chennai</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Active__c</field>
            <operation>equals</operation>
            <value>Yes</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>low bal accounts</fullName>
        <actions>
            <name>min_revenue</name>
            <type>Task</type>
        </actions>
        <active>true</active>
        <booleanFilter>1</booleanFilter>
        <criteriaItems>
            <field>Account.AnnualRevenue</field>
            <operation>lessThan</operation>
            <value>100000</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <tasks>
        <fullName>bigaccounts</fullName>
        <assignedTo>harsha@sf.com</assignedTo>
        <assignedToType>user</assignedToType>
        <dueDateOffset>0</dueDateOffset>
